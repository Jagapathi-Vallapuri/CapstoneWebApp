# Example environment variables for backend
# Generate a strong SECRET_KEY (keep private)
SECRET_KEY=replace_me_with_a_secure_random_string
DATABASE_URL=mysql+pymysql://user:password@localhost:3306/capstone_db

# JWT settings (optional)
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS S3 settings (optional if not using S3)
S3_BUCKET=
S3_REGION=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

ALLOWED_ORIGINS=http://localhost:5173

# LLM / Chat settings
LLM_PROVIDER=gemini
LLM_API_KEY=
LLM_MODEL=gemini-2.5-flash
LLM_API_URL=
LLM_MAX_TOKENS=512
LLM_TEMPERATURE=0.2

# --- LM Studio / OpenAI-compatible example ---
# To use LM Studio or any OpenAI-compatible chat completions API:
# LLM_PROVIDER=openai-compatible
# LLM_API_URL=http://localhost:1234/v1/chat/completions
# LLM_API_KEY= (if required)
# LLM_MODEL= (optional)
